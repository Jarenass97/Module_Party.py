                                <field name="duration"/>
                                <field name="record_company"/>
                                <field name="is_group"/>
                                <field name="group" attrs="{'invisible':[('is_group','=',False)],
                                                            'required':[('is_group','=',True)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Albums"><field name="albums"/></page>
                            <page string="Formats"><field name="format"/></page>
                            <page string="Genders"><field name="genders"/></page>
                            <page string="Authors"><field name="authors"/></page>
                            <page string="Producers"><field name="producers"/></page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

