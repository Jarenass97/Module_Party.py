<odoo>
    <data>
        <!-- explicit list view definition -->

        <!--films views-->
        <record model="ir.ui.view" id="party.film_list">
            <field name="name">party.film list</field>
            <field name="model">party.film</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="country"/>
                    <field name="release_Date"/>
                    <field name="duration" widget="float_time"/>
                    <field name="language"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="party.film_form">
            <field name="name">party.film form</field>
            <field name="model">party.film</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cover" widget="image"/>
                            </group>
                            <group>
                                <separator string="Main Data"/>
                                <field name="title"/>
                                <field name="country"/>
                                <field name="release_Date"/>
                                <field name="duration"/>
                                <field name="language"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="genders"/>
                            </group>
                            <group>
                                <notebook>
                                    <page string="Directors"><field name="director"/></page>
                                    <page string="Producers"><field name="producers"/></page>
                                    <page string="Screenwriters"><field name="screenwriters"/></page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Musical themes views-->
        <record model="ir.ui.view" id="party.musical_theme_list">
            <field name="name">party.musical_theme list</field>
