<odoo>
    <data>
        <!-- explicit list view definition -->

        <!--films views-->
        <record model="ir.ui.view" id="party.film_list">
            <field name="name">party.film list</field>
            <field name="model">party.film</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="country"/>
                    <field name="release_Date"/>
                    <field name="duration" widget="float_time"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="party.film_form">
            <field name="name">party.film form</field>
            <field name="model">party.film</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cover" widget="image"/>
                            </group>
                            <group>
                                <separator string="Main Data"/>
                                <field name="title"/>
                                <field name="country"/>
                                <field name="release_Date"/>
                                <field name="duration"/>
                                <field name="language"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="genders"/>
                            </group>
                            <group>
                                <notebook>
                                    <page string="Directors"><field name="director"/></page>
                                    <page string="Producers"><field name="producers"/></page>
                                    <page string="Screenwriters"><field name="screenwriters"/></page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="party.film_kanban">
            <field name="name">party.film kanban</field>
            <field name="model">party.film</field>
            <field name="arch" type="xml">
                <kanban default_group_by="language" on_create="quick_create"
                        quick_create_view="party.quick_create_film_form">
                    <field name="id"/>
                    <field name="country"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.country.raw_value)}} oe_kanban_global_click o_kanban_record_has_image_fill">
                                <a type="open">
                                    <img width="100" height="125" style="padding:5px" class="oe_kanban_image"
                                         t-att-src="kanban_image('party.film','cover',record.id.raw_value)"
                                         alt="film image"/>
                                </a>
                                <div t-attf-class="oe_kanban_content">
                                    <h4>
                                        <a type="edit">
                                            <field name="title"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li>Country:
                                            <field name="country"/>
                                        </li>
                                        <li>Release date:
                                            <field name="release_Date"/>
                                        </li>
                                        <li>Duration:
                                            <field name="duration" widget="float_time"/>
                                        </li>
                                        <li>Language:
                                            <field name="language"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
