    <menuitem name="Record Companys" id="party.menu_record_company_list" parent="party.menu_item"
              action="party.action_record_company_window"/>
    <menuitem name="Groups" id="party.menu_group_list" parent="party.menu_item"
              action="party.action_group_window"/>
    <menuitem name="Places" id="party.menu_place_list" parent="party.menu_item"
              action="party.action_place_window"/>
    <menuitem name="Assistants" id="party.menu_assistant_list" parent="party.menu_item"
              action="party.action_assistant_window"/>
    <menuitem name="Organizers" id="party.menu_organizer_list" parent="party.menu_item"
              action="party.action_organizer_window"/>
  </data>
</odoo>