              action="party.action_screenwriter_window"/>
    <menuitem name="Genders" id="party.menu_gender_list" parent="party.menu_item"
              action="party.action_gender_window"/>
    <menuitem name="Authors" id="party.menu_author_list" parent="party.menu_item"
