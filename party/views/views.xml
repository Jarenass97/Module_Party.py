      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="Party" id="party.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Management" id="party.menu_1" parent="party.menu_root"/>
    <!-- actions -->
    <menuitem name="Films" id="party.menu_film_list" parent="party.menu_1"
              action="party.action_film_window"/>
    <menuitem name="Musical themes" id="party.menu_musical_theme_list" parent="party.menu_1"
              action="party.action_musical_theme_window"/>
    <menuitem name="Directors" id="party.menu_director_list" parent="party.menu_1"
              action="party.action_director_window"/>
    <menuitem name="Producers" id="party.menu_producer_list" parent="party.menu_1"
              action="party.action_producer_window"/>
    <menuitem name="Screenwriters" id="party.menu_screenwriter_list" parent="party.menu_1"
              action="party.action_screenwriter_window"/>
    <menuitem name="Genders" id="party.menu_gender_list" parent="party.menu_1"
              action="party.action_gender_window"/>
    <menuitem name="Authors" id="party.menu_author_list" parent="party.menu_1"
              action="party.action_author_window"/>
    <menuitem name="Albums" id="party.menu_album_list" parent="party.menu_1"
              action="party.action_album_window"/>
  </data>
</odoo>