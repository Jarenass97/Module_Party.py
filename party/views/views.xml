    <!-- Top menu item -->
    <menuitem name="Party" id="party.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Management" id="party.menu_1" parent="party.menu_root"/>
    <menuitem name="Items" id="party.menu_item" parent="party.menu_root"/>
    <!-- actions -->
    <menuitem name="Films" id="party.menu_film_list" parent="party.menu_1"
              action="party.action_film_window"/>
    <menuitem name="Musical themes" id="party.menu_musical_theme_list" parent="party.menu_1"
