<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="party.film_list">
      <field name="name">party.film list</field>
      <field name="model">party.film</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Title"/>
          <field name="Country"/>
          <field name="releaseDate"/>
          <field name="Duration" widget="float_time"/>
          <field name="Language"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="party.musical_theme_list">
      <field name="name">party.musical_theme list</field>
      <field name="model">party.musical_theme</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Title"/>
          <field name="releaseDate"/>
          <field name="Duration" widget="float_time"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="party.party_list">
      <field name="name">party.party list</field>
      <field name="model">party.party</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Name"/>
          <field name="Date"/>
          <field name="Place"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="party.action_film_window">
      <field name="name">Films</field>
      <field name="res_model">party.film</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_musical_theme_window">
      <field name="name">Musical themes</field>
      <field name="res_model">party.musical_theme</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="party.action_director_window">
      <field name="name">Directors</field>
      <field name="res_model">party.director</field>
      <field name="view_mode">tree,form</field>
    </record>
     <record model="ir.actions.act_window" id="party.action_producer_window">
      <field name="name">Producers</field>
      <field name="res_model">party.producer</field>
      <field name="view_mode">tree,form</field>
    </record>
     <record model="ir.actions.act_window" id="party.action_screenwriter_window">
      <field name="name">Screenwriters</field>
      <field name="res_model">party.screenwriter</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_gender_window">
      <field name="name">Genders</field>
      <field name="res_model">party.gender</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_author_window">
      <field name="name">Authors</field>
      <field name="res_model">party.author</field>
      <field name="view_mode">tree,form</field>
    </record>
 <record model="ir.actions.act_window" id="party.action_album_window">
      <field name="name">Albums</field>
      <field name="res_model">party.album</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_format_window">
      <field name="name">Formats</field>
      <field name="res_model">party.format</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_record_company_window">
      <field name="name">Record companys</field>
      <field name="res_model">party.record_company</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_group_window">
      <field name="name">Groups</field>
      <field name="res_model">party.group</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_party_window">
      <field name="name">Partys</field>
      <field name="res_model">party.party</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_place_window">
      <field name="name">Places</field>
      <field name="res_model">party.place</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_assistant_window">
      <field name="name">Assistants</field>
      <field name="res_model">party.assistant</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="party.action_organizer_window">
      <field name="name">Organizers</field>
      <field name="res_model">party.organizer</field>
      <field name="view_mode">tree,form</field>
    </record>


